---
pagination:
  data: ministeriosData
  size: 1
  addAllPagesToCollections: true
  alias: ministerio
permalink: "/{{ministerio.nombreDeInstitucion | slug }}/ministros/index.html"
---
{% extends "src/_includes/baseToExtend.njk" %}

{% block head %}{% endblock %}

{% block content %}
  <style>
    #map-container {
      width: 100%;
      height: 200px;
    }
  </style>
  <div class="container">
    <div class="row">
      <div class="col-12 py-2">
        <a href="/ministerios/1">Ministerios</a>
        \
        {{ ministerio.nombreDeInstitucion }}
      </div>
      <div class="col-12 mb-2">
        <div class="bg-white w-100 row m-0 p-0">
          <a href="/{{ ministerio.nombreDeInstitucion | slug }}/index.html" class="col-12 col-md-3 m-0 p-2 text-left text-md-center font-weight-bold border-right">
            Ministerio
          </a>
          <a href="/{{ ministerio.nombreDeInstitucion | slug }}/ministros/index.html" class="col-12 col-md-3 m-0 p-2 text-left text-md-center bg-primary text-white font-weight-bold border-right">
            Ministros
          </a>
        </div>
      </div>
      <div class="col-12 mb-2">
        <div class="bg-white w-100 row m-0 p-0">
          <div class="col-12 bg-secondary py-2 px-3 d-flex">
            <h4 class="text-white m-0 font-weight-normal" id="titleTematicaContainer">
              Ministros
            </h4>
          </div>
          <div class="col-12 p-0">
            <div class="w-100">
              <div class="row m-0 p-0">
                <div class="col-12 p-3 border">
                  <table class="table table-sm">
                    <thead>
                      <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Puesto</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for ministro in ministerio.ministros %}
                        <tr>
                          <td>
                            <a href="/{{ ministro.idPerfil + '-' + ministro.nombre | slug }}">
                              {{ministro.nombre}}
                            </a>
                          </td>
                          <td>
                            {{ministro.puesto}}
                          </td>
                        </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                  <small>Fuente: {{ministerio.ministros[0].fuenteTexto}}</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}